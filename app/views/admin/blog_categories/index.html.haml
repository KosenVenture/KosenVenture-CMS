- content_for :title do
  ニュースカテゴリ一覧

.page-header
  %h1 ニュースカテゴリ一覧

= link_to new_admin_blog_category_path, class: 'btn btn-primary' do
  %li.icon-white.icon-plus
  作成

%table.table.table-striped
  %thead
    %tr
      %th 操作
      %th カテゴリ名
      %th カテゴリ表示名
  %tbody
    - @blog_categories.each do |blog_category|
      %tr
        %td
          = link_to '削除', admin_blog_category_path(blog_category),
            method: :delete, data: { confirm: '削除してよろしいですか？' },
            class: 'btn btn-mini btn-danger'
          = link_to '編集', edit_admin_blog_category_path(blog_category), class: 'btn btn-mini btn-success'
        %td= blog_category.name
        %td= blog_category.title

= paginate @blog_categories