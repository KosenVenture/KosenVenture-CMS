- model_class = PageCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @page_category.name
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @page_category.title

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), page_categories_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_page_category_path(@page_category), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), page_category_path(@page_category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
