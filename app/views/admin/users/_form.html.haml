= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :real_name, :class => 'control-label'
    .controls
      = f.text_field :real_name, :class => 'text_field'
  .control-group
    = f.label :password_digest, :class => 'control-label'
    .controls
      = f.text_field :password_digest, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
