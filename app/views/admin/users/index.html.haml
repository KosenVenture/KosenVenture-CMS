.page-header
  %h1 ユーザ一覧

= link_to new_admin_user_path, class: 'btn btn-primary' do
  %li.icon-white.icon-plus
  作成

%table.table.table-striped
  %thead
    %tr
      %th 操作
      %th ログイン名
      %th 表示名
      %th 権限
  %tbody
    - @users.each do |user|
      %tr
        %td
          = link_to '削除', admin_user_path(user), method: :delete,
            data: { confirm: "ユーザ(#{user.real_name})を削除してよろしいですか？" }, class: 'btn btn-mini btn-danger'
          = link_to '編集', edit_admin_user_path(user), class: 'btn btn-mini btn-success'
        %td= link_to user.name, edit_admin_user_path(user)
        %td= user.real_name
        %td= user.role

= paginate @users