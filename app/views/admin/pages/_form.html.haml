= form_for @page, url: { controller: 'admin/pages' }, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :body, :class => 'control-label'
    .controls
      = f.text_field :body, :class => 'text_field'
  .control-group
    = f.label :category_id, :class => 'control-label'
    .controls
      = f.text_field :category_id, :class => 'text_field'
  .control-group
    = f.label :author_id, :class => 'control-label'
    .controls
      = f.text_field :author_id, :class => 'text_field'
  .control-group
    = f.label :published, :class => 'control-label'
    .controls
      = f.text_field :published, :class => 'text_field'
  .control-group
    = f.label :published_at, :class => 'control-label'
    .controls
      = f.text_field :published_at, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), pages_path, :class => 'btn'
