- content_for :sidebar do
  %li.nav-header ページ管理
  %li= icon_link_to "一覧", pages_path, 'icon-list'
  %li= icon_link_to "作成", new_page_path, 'icon-pencil'

  %li.nav-header カテゴリ管理
  %li= icon_link_to "一覧", page_categories_path, 'icon-list'
  %li= icon_link_to "作成", new_page_category_path, 'icon-plus'

.page-header
  %h1 ページ一覧
%table.table.table-striped
  %thead
    %tr
      %th 操作
      %th No.
      %th カテゴリ
      %th 親ページ
      %th
        ページ名
        %br
        タイトル
      %th 公開状態
      %th 作成者
  %tbody
    - @pages.each do |page|
      %tr
        %td
          = link_to "確認", root_path + page.name, class: 'btn btn-mini btn-primary', target: '_blank'
          = link_to "編集", edit_page_path(page), class: 'btn btn-mini'
          = link_to "削除", page_path(page),
            method: :delete, data: { confirm: "削除してよろしいですか？" }, class: 'btn btn-mini btn-danger'
        %td= page.id
        %td= page.category ? page.category.name : 'なし'
        %td= page.parent ? page.parent.name : 'なし'
        %td
          = page.name
          %br
          = page.title
        %td= page.published
        %td= page.author.name

