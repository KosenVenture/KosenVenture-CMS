- model_class = Page
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @page.name
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @page.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @page.description
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @page.body
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @page.category_id
%p
  %strong= model_class.human_attribute_name(:author_id) + ':'
  %br
  = @page.author_id
%p
  %strong= model_class.human_attribute_name(:published) + ':'
  %br
  = @page.published
%p
  %strong= model_class.human_attribute_name(:published_at) + ':'
  %br
  = @page.published_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), pages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_page_path(@page), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), page_path(@page), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
