              <br>
              Twitter: <a href="https://twitter.com/#!/KosenVenture">@KosenVenture</a>
              <br>
              Facebook: <a href="https://www.facebook.com/kosenventure">Facebookページ</a>
              <br>
              RSS: <%= link_to 'RSS', news_index_path(:atom), id: 'rss_icon' %>
            </div>
          </div>
        </div>
      </div>
      <div style="background-color: #000; background-image: url('/kvp/img/common/copyright-2.png'); height:20px; background-repeat: no-repeat; background-position:center top;"></div>
    </div>

    <%= javascript_include_tag "kvp" %>
    <%= javascript_include_tag "/kvp/js/jquery.socialbutton-1.8.1.js" %>

    <script type="text/javascript">
    // SNS
    $(function() {
        // 現在のページのシェア
        $('#sns_facebook').socialbutton('facebook_like', {
          //button: 'standard',
          button: 'button_count',
          url: location.href,
          encoded: true,
          show_faces: false,
          action: 'like',
          locale: 'ja_JP',
          font: 'arial',
          colorscheme: 'light'
        });
        $('#sns_tweet').socialbutton('twitter', {
          button: 'horizontal',
          encoded: true,
          text: '',
          lang: 'ja',
          related: 'twitter'
        });
        $('#sns_hatena').socialbutton('hatena', {
          button: 'horizontal',
          encoded: true
        });
        $('#sns_fbpage').socialbutton('facebook_like', {
          //button: 'button_count',
          button: 'standard',
          url: 'https://www.facebook.com/kosenventure',
          width: '300',
          encoded: true,
          show_faces: true,
          action: 'like',
          locale: 'ja_JP',
          font: 'arial',
          colorscheme: 'dark'
        });
        $('#sns_top_tweet').socialbutton('twitter', {
          url: 'http://www.kosen-venture.com/',
          button: 'horizontal',
          encoded: true,
          text: '高専ベンチャー',
          lang: 'ja',
          related: 'twitter'
        });
        $('#sns_top_hatena').socialbutton('hatena', {
          url: 'http://www.kosen-venture.com/',
          button: 'horizontal',
          encoded: true
        });
    });
    </script>
    <div id="fb-root"></div>
    <script>
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
  </body>
</html>
