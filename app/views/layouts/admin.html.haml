!!! 5
%html(lang="ja")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? "#{yield(:title)}｜高専ベンチャー CMS" : "高専ベンチャー CMS"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fluid-top.navbar-inverse
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to '高専ベンチャー', root_path, class: 'brand', target: '_blank'
          .container.nav-collapse
            %ul.nav
              %li= icon_link_to "Dashboard", admin_path, 'icon-white icon-home'
              %li.dropdown
                %a.dropdown-toggle(data-toggle="dropdown" href="#")
                  %i.icon-white.icon-file
                  ページ管理
                  %b.caret
                %ul.dropdown-menu(role="menu" aria-labelledby="dLabel")
                  %li= icon_link_to "一覧", pages_path, 'icon-list'
                  %li= icon_link_to "作成", new_page_path, 'icon-pencil'
                  %li= icon_link_to "カテゴリ管理", page_categories_path, 'icon-filter'
              %li= icon_link_to 'ユーザ管理', users_path, 'icon-white icon-user'

    .container-fluid
      .row-fluid
        .span2
          .well.sidebar-nav
            %ul.nav.nav-list
              = yield(:sidebar)
        .span10
          = bootstrap_flash
          = content_for?(:main) ? yield(:main) : yield

      %footer
        %p &copy; Kosen Venture Project 2013

    = javascript_include_tag "application"
